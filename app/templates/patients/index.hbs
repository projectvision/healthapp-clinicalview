<aside>
  <ul>
    {{#each model as |model|}}
      <li>
        {{#link-to 'patients.index.show' model.patientId}}{{model.firstName}} {{model.lastName}}{{/link-to}}
      </li>
    {{else}}
      <li>Empty</li>
    {{/each}}
  </ul>
</aside>

<div id="patients-overview">
  <table>
    <thead>
      <th class="challenge-completion">Challenge Completion</th>
      <th class="health-risk">Health Risk</th>
      <th class="activity-level">Activity Level</th>
    </thead>
    <tbody>
      {{#each model as |model|}}
        <tr>
          <td>
            <div class="bar fitness" style="width: {{model.challengeCompletion.fitness}}%">{{model.challengeCompletion.fitness}}%</div>
            <div class="bar diet" style="width: {{model.challengeCompletion.diet}}%">{{model.challengeCompletion.diet}}%</div>
            <div class="bar stress" style="width: {{model.challengeCompletion.stress}}%">{{model.challengeCompletion.stress}}%</div>
          </td>
          <td class="health-risk {{model.healthRisk.change}}">
            {{model.healthRisk.status}}
          </td>
          <td class="activity-level {{model.activityLevel.change}}">
            {{model.activityLevel.status}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{outlet 'detail'}}
